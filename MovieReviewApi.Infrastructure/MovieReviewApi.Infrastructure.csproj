<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Scripts\DeleteReviewForUserStoredProcedure.sql" />
    <None Remove="Scripts\SearchReviewsStoredProcedure.sql" />
  </ItemGroup>
	
	
	<!-- SQL scripts as embedded resources -->
	<ItemGroup>
		<EmbeddedResource Include="Scripts\CreateActorStoredProcedure.sql" />
